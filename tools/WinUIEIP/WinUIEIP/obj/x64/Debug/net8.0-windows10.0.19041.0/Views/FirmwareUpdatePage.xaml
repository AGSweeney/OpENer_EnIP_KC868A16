<Page x:Class="EulerLink.Views.FirmwareUpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Firmware Update" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,10"/>

            <Border x:ConnectionId='2' x:Name="NotConnectedWarningBorder"
                    BorderBrush="#0066CC"
                    BorderThickness="2"
                    CornerRadius="4"
                    Background="#E6F2FF"
                    Padding="12"
                    Margin="0,0,0,16"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ℹ️" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Not connected to device. Please connect to a device in the sidebar to upload firmware."
                               FontWeight="SemiBold"
                               Foreground="#003366"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel x:ConnectionId='3' x:Name="FirmwareContentPanel">
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="0"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Upload Firmware" 
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               Margin="12,12,12,8"/>
                    <StackPanel Margin="12">
                        <TextBlock TextWrapping="Wrap" 
                                   Text="Select a firmware binary file to upload and install on the device. The device will validate the firmware and reboot upon successful installation."
                                   Margin="0,0,0,16"/>
                        
                        <Button x:ConnectionId='9' Content="Choose Firmware File" 
                                                         
                                HorizontalAlignment="Left"
                                Style="{StaticResource TealButtonStyle}"
                                Margin="0,0,0,12"/>
                        
                        <TextBlock x:ConnectionId='10' x:Name="SelectedFileTextBlock" 
                                   Text="No file selected" 
                                   Margin="0,0,0,12"/>
                        
                        <Button x:ConnectionId='11' x:Name="UploadButton" 
                                Content="Upload Firmware" 
                                                             
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                Style="{StaticResource TealButtonStyle}"/>
                        
                        <ProgressBar x:ConnectionId='12' x:Name="UploadProgressBar" 
                                     Visibility="Collapsed" 
                                     IsIndeterminate="True"
                                     Margin="0,12,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border x:ConnectionId='4' x:Name="OtaStatusBorder"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="0"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="OTA Update Status" 
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               Margin="12,12,12,8"/>
                    <StackPanel Margin="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status: " FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock x:ConnectionId='5' x:Name="OtaStatusTextBlock" Grid.Row="0" Grid.Column="1" Text="Idle" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Progress: " FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                                <ProgressBar x:ConnectionId='7' x:Name="OtaProgressBar" 
                                             Minimum="0" 
                                             Maximum="100" 
                                             Value="0"
                                             Visibility="Collapsed"/>
                                <TextBlock x:ConnectionId='8' x:Name="OtaProgressTextBlock" Text="0%" Margin="0,4,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Message: " FontWeight="SemiBold" Margin="0,0,8,0"/>
                            <TextBlock x:ConnectionId='6' x:Name="OtaMessageTextBlock" Grid.Row="2" Grid.Column="1" Text="No update in progress" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="0"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Important Notes" 
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               Margin="12,12,12,8"/>
                    <StackPanel Margin="12">
                        <TextBlock TextWrapping="Wrap" 
                                   Text="• Ensure you have a working firmware version before updating"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Text="• Maintain network connectivity during the update process"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Text="• Do not power off the device during firmware update"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Text="• The device validates the firmware before installation"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Text="• If the update fails, the device may roll back to the previous firmware version"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>


