<ContentDialog x:Class="EulerLink.Views.DeviceDiscoveryDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Discover EtherNet/IP Devices"
               PrimaryButtonText="Select"
               SecondaryButtonText="Cancel"
               DefaultButton="Primary"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
               SecondaryButtonClick="ContentDialog_SecondaryButtonClick">
    
    <Grid MinWidth="800" MinHeight="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <Button x:Name="ScanButton" 
                    Content="Scan for Devices" 
                    Click="ScanButton_Click"
                    Style="{StaticResource TealButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,8"/>
            <TextBlock x:Name="StatusTextBlock" 
                       Text="Click 'Scan for Devices' to discover EtherNet/IP devices on your network."
                       TextWrapping="Wrap"
                       Foreground="Gray"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Padding="8,4" Background="LightGray" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="IP Address" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Text="Vendor ID" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="2" Text="Product Code" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="3" Text="Product Name" FontWeight="SemiBold" Margin="8,0"/>
                <TextBlock Grid.Column="4" Text="State" FontWeight="SemiBold"/>
            </Grid>
            
            <ListView x:Name="DevicesListView" 
                      Grid.Row="1"
                      SelectionMode="Single"
                      Margin="0,0,0,16">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding IpAddress}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding VendorId}"/>
                            <TextBlock Grid.Column="2" Text="{Binding ProductCode}"/>
                            <TextBlock Grid.Column="3" Text="{Binding ProductName}" TextWrapping="NoWrap" Margin="8,0" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="4" Text="{Binding DeviceType}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <TextBlock Grid.Row="2" 
                   x:Name="CountTextBlock"
                   Text="No devices found"
                   Foreground="Gray"
                   FontSize="11"/>
    </Grid>
</ContentDialog>

